@model WebApplication1.Models.Department


   <div class="modal" tabindex="-1" id="Department">
       <div class="modal-dialog">
           <div class="modal-content">
               <div class="modal-header">
                   <h5 class="modal-title">Add Department</h5>
                   <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                       <span aria-hidden="true">&times;</span>
                   </button>
               </div>
               <div class="modal-body">
                   <div class="row">
                       <div class="col-12">
                           <form Id="_AddNewDepartment">
                               <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                               <div class="form-group">
                                   <label asp-for="DepartmentName" class="control-label"></label>
                                   <input asp-for="DepartmentName" class="form-control" />
                                   <span asp-validation-for="DepartmentName" class="text-danger"></span>
                               </div>
                               <div class="form-group">
                                   <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                   <button type="button"  id ="AddNewDepartment" class="btn btn-primary">Add</button>
                               </div>
                           </form>
                       </div>
                   </div>
               </div>
           </div>
       </div>
   </div>


   <script>


    $("#AddNewDepartment").click(function () {

              $.ajax({
                url: '@Url.Action("AddNewDepartment", "EmployeeManagement")',
                  type: 'POST',
                  data: $("#_AddNewDepartment").serialize()
            })
                  .done(function (response) {
                      if (response.status) {
                          $("#Department").modal('hide');
                          $('#DepModal').html("");
                      }
                      else {
                          console.log("error");
                      }
                  })
                .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("FAIL");
                });
    })
   </script>